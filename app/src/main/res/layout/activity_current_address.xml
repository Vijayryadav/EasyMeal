<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context=".CurrentAddress">

    <include
        android:id="@+id/delivery_address"
        layout="@layout/currentaddress" />
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/delivery_address_image"
        android:src="@drawable/addree"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delivery_address_text"
        android:layout_marginLeft="15dp"
        android:text="Fill Your Address To Receive the Tiffin"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/colorAccent"
        android:textSize="21sp"/>
    <EditText
        android:id="@+id/delivery_addressFullName"
        android:layout_width="296dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:background="@drawable/userinfo_background"
        android:hint="FullName"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:singleLine="false"
        android:textColor="#090909"
        android:textColorHighlight="#000000"
        android:textColorHint="#050505"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/delivery_address_phone"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="10"
        android:background="@drawable/userinfo_background"
        android:padding="5dp"
        android:textColor="#0D0C0C"
        android:textColorHighlight="#FBFBFB"
        android:textColorHint="#121111"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />

    <EditText
        android:id="@+id/delivery_addressHouse"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:hint="House No.| Building Name"
        android:inputType="textPersonName"
        android:background="@drawable/userinfo_background"
        android:padding="5dp"
        android:textColor="#0D0C0C"
        android:textColorHighlight="#FBFBFB"
        android:textColorHint="#121111"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />
    <EditText
        android:id="@+id/delivery_addressArea"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:hint="Road Name, Area, Colony"
        android:inputType="textPersonName"
        android:background="@drawable/userinfo_background"
        android:padding="5dp"
        android:textColor="#0D0C0C"
        android:textColorHighlight="#FBFBFB"
        android:textColorHint="#121111"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />
    <EditText
        android:id="@+id/delivery_addressCity"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:ems="10"
        android:hint="City"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#0D0C0C"
        android:textColorHighlight="#FBFBFB"
        android:background="@drawable/userinfo_background"
        android:textColorHint="#121111"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />
    <EditText
        android:id="@+id/delivery_addressState"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/userinfo_background"
        android:ems="10"
        android:hint="State"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#0D0C0C"
        android:textColorHighlight="#FBFBFB"
        android:textColorHint="#121111"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />
    <EditText
        android:id="@+id/delivery_addressPincode"
        android:layout_width="292dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/userinfo_background"
        android:ems="10"
        android:hint="Pincode"
        android:inputType="phone"
        android:maxLength="6"
        android:padding="5dp"
        android:textColor="#0D0C0C"
        android:textColorHighlight="#FBFBFB"
        android:textColorHint="#121111"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email" />
    <Button
        android:id="@+id/delivery_addressButton"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounds"
        android:text="Next" />







</LinearLayout>